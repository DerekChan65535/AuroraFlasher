<Window x:Class="AuroraFlasher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AuroraFlasher"
        xmlns:vm="clr-namespace:AuroraFlasher.ViewModels"
        mc:Ignorable="d"
        Title="AuroraFlasher - SPI Flash Programmer" 
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Style for buttons that should not change color on focus -->
        <Style x:Key="StaticColorButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Background}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Background}"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="Background" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Background}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Top Control Panel -->
        <Border Grid.Row="0" BorderBrush="#CCCCCC" BorderThickness="1" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                
                <!-- Read Controls -->
                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <TextBlock Text="Read:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
                    <TextBlock Text="Address:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox Text="{Binding ReadAddress, UpdateSourceTrigger=PropertyChanged}" 
                             Width="100" Height="25" Margin="0,0,15,0"
                             VerticalContentAlignment="Center"/>
                    
                    <TextBlock Text="Length:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox Text="{Binding ReadLength, UpdateSourceTrigger=PropertyChanged}" 
                             Width="80" Height="25" Margin="0,0,15,0"
                             VerticalContentAlignment="Center"/>
                    
                    <Button Content="Read Memory" Command="{Binding ReadMemoryCommand}" 
                            Width="120" Height="30"
                            Background="#2196F3" Foreground="White"
                            FontWeight="Bold"
                            Style="{StaticResource StaticColorButtonStyle}"/>
                    
                    <Button Content="Clear Flash" 
                            Command="{Binding ClearFlashCommand}" 
                            Width="120" Height="30"
                            Background="#F44336" 
                            Foreground="White"
                            FontWeight="Bold"
                            Margin="15,0,0,0"
                            ToolTip="Erase entire chip and verify"
                            Style="{StaticResource StaticColorButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel: Device and Chip Info -->
            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <!-- Device Info -->
                <Border BorderBrush="#CCCCCC" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Device Information" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding DeviceInfo}" 
                                   TextWrapping="Wrap"
                                   FontFamily="Consolas"
                                   FontSize="11"/>
                    </StackPanel>
                </Border>
                
                <!-- Chip Info -->
                <Border BorderBrush="#CCCCCC" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Chip Information" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding ChipInfo}" 
                                   TextWrapping="Wrap"
                                   FontFamily="Consolas"
                                   FontSize="11"/>
                    </StackPanel>
                </Border>
                
                <!-- Flash ROM Controls -->
                <Border BorderBrush="#CCCCCC" BorderThickness="1" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Flash ROM" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                        
                        <!-- File Selection -->
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="Binary File:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBox Grid.Column="0" 
                                         Text="{Binding FlashFilePath, UpdateSourceTrigger=PropertyChanged}" 
                                         Height="25" 
                                         VerticalContentAlignment="Center"
                                         Margin="0,0,5,0"
                                         FontFamily="Consolas"
                                         FontSize="11"/>
                                
                                <Button Grid.Column="1" 
                                        Content="Browse..." 
                                        Command="{Binding BrowseFlashFileCommand}"
                                        Width="80" 
                                        Height="25"
                                        Style="{StaticResource StaticColorButtonStyle}"/>
                            </Grid>
                        </StackPanel>
                        
                        <!-- Flash Buttons -->
                        <StackPanel>
                            <Button Content="Flash ROM" 
                                    Command="{Binding FlashCommand}" 
                                    Width="120" 
                                    Height="30"
                                    Background="#4CAF50" 
                                    Foreground="White"
                                    FontWeight="Bold"
                                    Margin="0,0,0,5"
                                    ToolTip="Write binary file to chip starting at address 0x000000"
                                    Style="{StaticResource StaticColorButtonStyle}"/>
                            
                            <Button Content="Flash with Verify" 
                                    Command="{Binding FlashWithVerifyCommand}" 
                                    Width="120" 
                                    Height="30"
                                    Background="#FF9800" 
                                    Foreground="White"
                                    FontWeight="Bold"
                                    ToolTip="Write binary file with immediate page-by-page verification"
                                    Style="{StaticResource StaticColorButtonStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
            
            <!-- Right Panel: Hex Viewer and Log -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Hex Viewer -->
                <Border Grid.Row="0" BorderBrush="#CCCCCC" BorderThickness="1" Padding="5" Margin="0,0,0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="Memory Hex Dump" FontWeight="Bold" FontSize="14" Margin="5,5,5,10"/>
                        
                        <!-- Virtualized ListView for performance with large hex dumps -->
                        <ListView Grid.Row="1"
                                  ItemsSource="{Binding HexLines}"
                                  ScrollViewer.CanContentScroll="True"
                                  VirtualizingPanel.ScrollUnit="Pixel"
                                  VirtualizingStackPanel.VirtualizationMode="Recycling"
                                  BorderThickness="0"
                                  Background="White"
                                  Padding="5">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <ContentPresenter />
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding FormattedLine}" 
                                               FontFamily="Consolas"
                                               FontSize="12"/>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Border>
                
                <!-- Log Output -->
                <Border Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="1" Padding="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5,5,5,10">
                            <TextBlock Text="Activity Log" FontWeight="Bold" FontSize="14"/>
                            <Button Content="Clear" Command="{Binding ClearLogCommand}" 
                                    Width="60" Height="22" Margin="10,0,0,0"
                                    FontSize="11"
                                    Style="{StaticResource StaticColorButtonStyle}"/>
                        </StackPanel>
                        
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <TextBlock Text="{Binding LogOutput}" 
                                       FontFamily="Consolas"
                                       FontSize="11"
                                       Margin="5"/>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" BorderBrush="#CCCCCC" BorderThickness="0,1,0,0" Padding="5" Margin="0,10,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Status Text -->
                <Grid Grid.Row="0" Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="Status:" FontWeight="Bold" Margin="0,0,10,0"/>
                    <TextBlock Grid.Column="1" Text="{Binding StatusMessage}"/>
                    <TextBlock Grid.Column="2" Text="{Binding ConnectionStatus}" 
                               Margin="20,0,0,0"/>
                </Grid>
                
                <!-- Progress Bar -->
                <Grid Grid.Row="1" Visibility="{Binding IsOperationInProgress, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <ProgressBar Grid.Column="0" 
                                 Height="20" 
                                 Minimum="0" 
                                 Maximum="100"
                                 Value="{Binding ProgressPercentage, Mode=OneWay}"
                                 Margin="0,0,10,0"/>
                    
                    <TextBlock Grid.Column="1" 
                               Text="{Binding ProgressText}" 
                               VerticalAlignment="Center"
                               FontFamily="Consolas"
                               FontSize="11"
                               MinWidth="200"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
