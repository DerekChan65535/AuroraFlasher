<Window x:Class="AuroraFlasher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AuroraFlasher"
        xmlns:vm="clr-namespace:AuroraFlasher.ViewModels"
        mc:Ignorable="d"
        Title="AuroraFlasher - SPI Flash Programmer" 
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Top Control Panel -->
        <Border Grid.Row="0" BorderBrush="#CCCCCC" BorderThickness="1" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Connection Controls -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Hardware:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
                    <ComboBox ItemsSource="{Binding AvailableDevices}" 
                              SelectedItem="{Binding SelectedDevice}"
                              DisplayMemberPath="Name"
                              Width="200" Margin="0,0,20,0"
                              IsEnabled="False"/>
                    
                    <TextBlock Text="(Auto-connect enabled)" VerticalAlignment="Center" 
                               Margin="0,0,20,0" FontStyle="Italic" Foreground="Gray"/>
                    
                    <Button Content="Detect Chip" Command="{Binding DetectChipCommand}" 
                            Width="120" Height="30" Margin="0,0,10,0"
                            Background="#4CAF50" Foreground="White"
                            FontWeight="Bold"/>
                </StackPanel>
                
                <!-- Read Controls -->
                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <TextBlock Text="Read:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
                    <TextBlock Text="Address:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox Text="{Binding ReadAddress, UpdateSourceTrigger=PropertyChanged}" 
                             Width="100" Height="25" Margin="0,0,15,0"
                             VerticalContentAlignment="Center"/>
                    
                    <TextBlock Text="Length:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox Text="{Binding ReadLength, UpdateSourceTrigger=PropertyChanged}" 
                             Width="80" Height="25" Margin="0,0,15,0"
                             VerticalContentAlignment="Center"/>
                    
                    <Button Content="Read Memory" Command="{Binding ReadMemoryCommand}" 
                            Width="120" Height="30"
                            Background="#2196F3" Foreground="White"
                            FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel: Device and Chip Info -->
            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <!-- Device Info -->
                <Border BorderBrush="#CCCCCC" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Device Information" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding DeviceInfo}" 
                                   TextWrapping="Wrap"
                                   FontFamily="Consolas"
                                   FontSize="11"/>
                    </StackPanel>
                </Border>
                
                <!-- Chip Info -->
                <Border BorderBrush="#CCCCCC" BorderThickness="1" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Chip Information" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding ChipInfo}" 
                                   TextWrapping="Wrap"
                                   FontFamily="Consolas"
                                   FontSize="11"/>
                    </StackPanel>
                </Border>
            </StackPanel>
            
            <!-- Right Panel: Hex Viewer and Log -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Hex Viewer -->
                <Border Grid.Row="0" BorderBrush="#CCCCCC" BorderThickness="1" Padding="5" Margin="0,0,0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="Memory Hex Dump" FontWeight="Bold" FontSize="14" Margin="5,5,5,10"/>
                        
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                            <TextBlock Text="{Binding HexOutput}" 
                                       FontFamily="Consolas"
                                       FontSize="12"
                                       Margin="5"/>
                        </ScrollViewer>
                    </Grid>
                </Border>
                
                <!-- Log Output -->
                <Border Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="1" Padding="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5,5,5,10">
                            <TextBlock Text="Activity Log" FontWeight="Bold" FontSize="14"/>
                            <Button Content="Clear" Command="{Binding ClearLogCommand}" 
                                    Width="60" Height="22" Margin="10,0,0,0"
                                    FontSize="11"/>
                        </StackPanel>
                        
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <TextBlock Text="{Binding LogOutput}" 
                                       FontFamily="Consolas"
                                       FontSize="11"
                                       Margin="5"/>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" BorderBrush="#CCCCCC" BorderThickness="0,1,0,0" Padding="5" Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="Status:" FontWeight="Bold" Margin="0,0,10,0"/>
                <TextBlock Grid.Column="1" Text="{Binding StatusMessage}"/>
                <TextBlock Grid.Column="2" Text="{Binding IsConnected, StringFormat='Connected: {0}'}" 
                           Margin="20,0,0,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>
